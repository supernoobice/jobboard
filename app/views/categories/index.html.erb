<h1>List of categories</h1>
<p><%= link_to 'add new', new_category_path %></p>
<ul>
<% for category in @categories %>
    <li><%= category.name %>
      <%= link_to 'edit', edit_category_path(category) %>
      <%= link_to 'delete', category_path(category), :method => :delete, :confirm => "Are you sure you want to delete?" %></li>
<% end %>
</ul>